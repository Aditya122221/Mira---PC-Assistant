{
  "name": "pc-assistant",
  "version": "1.0.0",
  "description": "My AI Assistant desktop app",
  "type": "module",
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "vite build && electron .",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "@google/generative-ai": "^0.17.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.1",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.pcassistant.app",
    "productName": "PCAssistant",
    "files": [
      "build/**/*",
      "electron.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "signAndEditExecutable": false,
      "signExts": []
    }
  }
}